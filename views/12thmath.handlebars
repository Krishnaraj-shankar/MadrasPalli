{{> nav}}

<div class="chapters">
    <h3>Class 12 - Mathematics</h3>

    <br>

    <p class="title-sm">Chapters</p>

    {{#each chapter}}

      <div class="accordion accordion-flush" id="accordionFlushExample">
  <div class="accordion-item">
    <div class="accordion-header">
      <div class="all-chap accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#flush-collapse{{@index}}">
      <div class="chap-num">
          <p>{{@index}}</p>
      </div>
        <p class="chap-name">{{name}}</p>

        </div>
    </div>
    <div id="flush-collapse{{@index}}" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
      <div class="accordion-body">
        {{#each exercise}}
          <p class="exercises" href="">
            <a href="">Exercise {{this}}</a>  
            <span>|</span>         
            <a href="">Examples</a>           

          </p>

        {{/each}}

      </div>
    </div>
  </div>
  
</div>

        
        

        
    {{/each}}
        
        
</div>







